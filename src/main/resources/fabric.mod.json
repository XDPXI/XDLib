{
  "schemaVersion": 1,
  "id": "ztrolix-libs",
  "version": "${version}",
  "name": "Ztrolix Libs",
  "description": "This is a mod/modpack library and counter for Ztrolix's mods and modpacks.",
  "authors": [
    {
      "name": "Ztrolix",
      "contact": {
        "homepage": "https://ztrolix.vercel.app"
      }
    }
  ],
  "contact": {
    "homepage": "https://ztrolix.vercel.app/mc/zlibs",
    "sources": "https://github.com/ZtrolixGit/ZtrolixLibs",
    "issues": "https://github.com/ZtrolixGit/ZtrolixLibs/issues"
  },
  "license": "Apache-2.0",
  "icon": "assets/ztrolix-libs/icon.png",
  "environment": "*",
  "entrypoints": {
    "preLaunch": [
      "com.ztrolix.zlibs.EarlyLoadingBarPreLaunch"
    ],
    "main": [
      "com.ztrolix.zlibs.ZtrolixLibs"
    ],
    "client": [
      "com.ztrolix.zlibs.ZtrolixLibsClient"
    ],
    "fabric-datagen": [
      "com.ztrolix.zlibs.ZtrolixLibsDataGenerator"
    ],
    "modmenu": [
      "com.ztrolix.zlibs.ModMenuIntegration"
    ]
  },
  "accessWidener": "ztrolix-libs.accesswidener",
  "mixins": [
    "ztrolix-libs.mixins.json",
    {
      "config": "ztrolix-libs.client.mixins.json",
      "environment": "client"
    }
  ],
  "depends": {
    "fabricloader": ">=0.16.0",
    "minecraft": ">=1.21",
    "java": ">=21",
    "fabric-api": "*",
    "cloth-config": ">=15.0.127"
  },
  "recommends": {
    "modmenu": "*"
  },
  "breaks": {
    "sodium": "<0.5.9"
  },
  "custom": {
    "modmenu": {
      "parent": {
        "id": "ztrolix-libs",
        "name": "Ztrolix Libs",
        "description": "This is a mod/modpack library and counter for Ztrolix's mods and modpacks.",
        "icon": "assets/ztrolix-libs/icon.png"
      },
      "links": {
        "modmenu.modrinth": "https://modrinth.com/plugin/ztrolixlibs"
      },
      "update_checker": true
    },
    "modmenu-badges": [
      {
        "name": "Client or Server",
        "fillColor": -16172759,
        "outlineColor": -15698860
      },
      {
        "name": "Beta",
        "fillColor": -5939429,
        "outlineColor": -881624
      }
    ]
  }
}