{
  "schemaVersion": 1,
  "id": "xdlib",
  "version": "${version}",
  "name": "XD's Library",
  "description": "This is a library for many uses and is included as an player counter for XDPXI's mods and modpacks!",
  "authors": [
    {
      "name": "XDPXI",
      "contact": {
        "homepage": "https://xdpxi.vercel.app"
      }
    }
  ],
  "contact": {
    "homepage": "https://xdpxi.vercel.app/xdlib",
    "sources": "https://github.com/XDPXI/XDLib",
    "issues": "https://github.com/XDPXI/XDLib/issues"
  },
  "license": "Apache-2.0",
  "icon": "assets/xdlib/icon.png",
  "environment": "*",
  "entrypoints": {
    "main": [
      "dev.xdpxi.xdlib.fabric.MainFabric"
    ],
    "client": [
      "dev.xdpxi.xdlib.fabric.client.MainFabricClient"
    ]
  },
  "mixins": [
    "xdlib.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=0.16.9",
    "minecraft": ">=1.21",
    "java": ">=21"
  },
  "custom": {
    "modmenu": {
      "links": {
        "modmenu.modrinth": "https://modrinth.com/plugin/xdlib"
      },
      "badges": [ "library" ],
      "update_checker": true
    }
  }
}
